<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?colorDialogBackground">
    <TextView android:id="@+id/title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="PLACEHOLDER"
              android:textColor="?colorDialogText"
              android:textSize="22dp"
              android:background="?colorDialogFrame"
              android:paddingBottom="10dp"
              android:paddingTop="10dp"/>
    <TextView android:id="@+id/ayss"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="PLACEHOLDER"
              android:textColor="?colorDialogText"
              android:gravity="center"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp"
    />
    <LinearLayout android:id="@+id/footer"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_below="@id/ayss">
        <Button android:id="@+id/btnNeg" android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/misc_no"
                android:background="?colorDialogFrame"
                android:layout_marginRight="2dp"/>
        <Button android:id="@+id/btnPos" android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/misc_yes"
                android:background="?colorDialogFrame"/>
    </LinearLayout>
</LinearLayout>