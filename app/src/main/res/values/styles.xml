<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Blue" parent="Base.Theme.AppCompat.Light">
        <item name="colorViewPort">#0D2740</item>
        <item name="colorFrame">#001a33</item>
        <item name="colorText">#ffffff</item>
        <item name="colorHighlight">#00ffff</item>

        <item name="colorDialogBackground">?colorViewPort</item>
        <item name="colorDialogFrame">?colorFrame</item>
