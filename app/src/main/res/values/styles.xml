    <style name="AppTheme.Camo" parent="Base.Theme.AppCompat.Light">
        <item name="colorViewPort">#32000000</item>
        <item name="colorFrame">@null</item>
        <item name="colorText">#ffffff</item>
        <item name="colorHighlight">#66ff66</item>

        <item name="colorDialogBackground">#4d4d4d</item>
        <item name="colorDialogFrame">#000000</item>
        <item name="colorDialogText">?colorText</item>
        <item name="colorDialogHighlight">?colorHighlight</item>

