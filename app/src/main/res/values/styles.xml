<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Mint" parent="Base.Theme.AppCompat.Light">
        <item name="colorViewPort">#00994d</item>
        <item name="colorFrame">#006633</item>
        <item name="colorText">#000000</item>
        <item name="colorHighlight">#e68a00</item>

        <item name="colorDialogBackground">#00994d</item>
        <item name="colorDialogText">#000000</item>
        <item name="colorDialogHighlight">#e68a00</item>

        <item name="colorToolbar">?attr/colorFrame</item>

        <item name="colorSnackbarText">#ffffff</item>
        <item name="colorSnackbarBackground">#262626</item>

        <item name="colorGreyed">#e68a00</item>

        <item name="android:colorEdgeEffect">?attr/colorText</item>
        <item name="colorControlHighlight">?attr/colorText</item>
        <item name="android:itemBackground">?colorDialogBackground</item>
        <item name="android:panelFullBackground">?colorDialogBackground</item>
        <item name="android:textColor">?colorDialogText</item>

        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Themes -->
    <style name="AppTheme.Blue" parent="Base.Theme.AppCompat.Light">
        <item name="colorViewPort">#001a33</item>
        <item name="colorFrame">#00172E</item>
        <item name="colorText">#ffffff</item>
        <item name="colorHighlight">#CC42f486</item>

        <item name="colorDialogBackground">#00172E</item>
        <item name="colorDialogText">#ffffff</item>
        <item name="colorDialogHighlight">#CC42f486</item>

        <item name="colorToolbar">?attr/colorFrame</item>

        <item name="colorSnackbarText">#ffffff</item>
        <item name="colorSnackbarBackground">#262626</item>

        <item name="colorGreyed">#999a9d</item>

        <item name="android:colorEdgeEffect">?attr/colorText</item>
        <item name="colorControlHighlight">?attr/colorText</item>
        <item name="android:itemBackground">?colorDialogBackground</item>
        <item name="android:textColor">?colorDialogText</item>

        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">?attr/colorFrame</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">?colorDialogText</item>
        <item name="textColorAlertDialogListItem">?colorDialogText</item>
        <item name="colorAccent">?colorDialogHighlight</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorText</item>
    </style>
    <style name="MyActionBar" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="popupTheme">@style/CustomPopupTheme</item>
    </style>
    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorControlActivated">?colorHighlight</item>
        <item name="android:textColorSecondary">?colorText</item>
    </style>
</resources>
